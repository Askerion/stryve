{
  "main": "index.html",
  "name": "stryve",
  "version": "v0.3.0-alpha",
  "description": "A socket.io-driven chat application.",
  "author": "https://github.com/nicklaw5",
  "scripts": {
    "server": "SET PROD_ENV=1 & node src/server.js",
    "server-dev": "SET PROD_ENV=0 & node src/server.js",
    "w-app": "webpack-dev-server --inline --hot",
    "d-app": "nw .",
    "build": "cp ./node_modules/emojify.js/dist/css/basic/emojify.css ./src/assets/css/emojify.css && cp ./node_modules/emojify.js/dist/images/basic/* ./src/assets/img/emoticons && webpack --progress --hide-modules",
    "build-production": "cp ./node_modules/emojify.js/dist/css/basic/emojify.css ./src/assets/css/emojify.css && cp ./node_modules/emojify.js/dist/images/basic/* ./src/assets/img/emoticons && SET PROD_ENV=1 & webpack --progress --hide-modules",
    "build-watch": "webpack --watch --progress --hide-modules"
  },
  "nwjsBuilder": {
    "productName": "Stryve",
    "productVersion": "0.3.0",
    "fileDescription": "Stryve"
  },
  "window": {
    "title": "Stryve",
    "icon": "./src/assets/img/logo-100x100.png",
    "frame": true,
    "width": 1000,
    "height": 500,
    "position": "center",
    "min_width": 800,
    "min_height": 400
  },
  "webkit": {
    "plugin": true,
    "java": false
  },
  "dependencies": {
    "babel-cli": "^6.8.0",
    "babel-core": "^6.8.0",
    "babel-preset-es2015": "^6.6.0",
    "express": "^4.10.2",
    "socket.io": "^1.4.4",
    "striptags": "^2.1.1",
    "stryve-api-client": "^0.1.0",
    "uuid": "^2.0.2"
  },
  "devDependencies": {
    "babel-loader": "^6.2.0",
    "babel-plugin-transform-runtime": "^6.0.0",
    "babel-polyfill": "^6.2.0",
    "babel-preset-stage-2": "^6.1.18",
    "babel-runtime": "^6.0.0",
    "cls-bluebird": "^1.0.1",
    "css-loader": "^0.23.1",
    "emojify.js": "^1.1.0",
    "file-loader": "^0.8.4",
    "font-awesome-webpack": "0.0.4",
    "jquery": "^2.2.3",
    "json": "^9.0.3",
    "json-loader": "^0.5.4",
    "lodash": "^4.7.0",
    "moment": "^2.12.0",
    "offline-js": "^0.7.15",
    "sillyname": "^0.1.0",
    "socket.io-client": "^1.4.5",
    "style-loader": "^0.13.1",
    "url-loader": "^0.5.7",
    "vue": "^1.0.20",
    "vue-hot-reload-api": "^1.2.1",
    "vue-html-loader": "^1.0.0",
    "vue-loader": "^8.2.0",
    "vue-style-loader": "^1.0.0",
    "vuex": "^0.6.2",
    "webpack": "^1.12.14",
    "webpack-dev-server": "^1.14.1"
  }
}
